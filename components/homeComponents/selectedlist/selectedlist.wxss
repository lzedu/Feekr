.selected-item{
  display: block;
  width: 728rpx;
  height: 100%;
  color: #2d2d2d;
  font-weight:normal;
  padding: 0 8px;
  /* text-align: left; */
  box-sizing: border-box;
}
.selected-container > view:nth-child(2){
  border-bottom:1px solid #F2F2F2; 
}
.selected-title {
  font-size: 16px;
  text-align: left;
  width: 100%;
  margin: 0 auto;
}
.flex-wrap{
  align-items: center;
  display: flex;
  margin-bottom: 25px;
  margin-top: 20px;
  width: 100%;
  height: 100%;
}
.flex-wrap image{
  width: 136px;
  display:block;
  height: 90.67px;
}
.selected {
  margin-left: 10px;
  line-height: 1.0;
  flex: 1;
  width: calc(728rpx-20px);
  height: 100%;
  position: relative;
}
.font-sm {
  text-overflow: ellipsis;
  overflow: hidden;
  font-size: 12px;
  text-align: left;
  line-height: 1.5;
  position: absolute;
  top: -50px;
  left: 0;
}
.product-tag {
  width: 100%;
  height: 100%;
  padding-top: -18px;
  color: #999;
  white-space: pre-line;
  text-align: left;
  font-size: 10px;
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  position: absolute;
  top: 0px;
  left: 0;
}
.product-tag view:nth-child(2){
  margin-left: 5px;
}
