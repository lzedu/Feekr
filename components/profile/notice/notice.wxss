/* components/profile/notice/notice.wxss */
.user-wrap .user-header {
    background: #1abc9c;
    border-bottom: none;
    color: #fff;
}

.back-title {
    text-align: center;
    position: relative;
    padding: 10rpx;
    font-size: 34rpx;
    border-bottom: 1rpx solid #e5e5e5;
    background: #fff;
}
.user-wrap .user-header .iconfont {
    color: #fff;
}

.back-title .iconfont {
    position: absolute;
    left: 20rpx;
    top: 50%;
    -webkit-transform: translateY(-50%);
    transform: translateY(-50%);
    color: #ccc;
    font-size: 32rpx;
}
.notice-tab {
    text-align: center;
    border-bottom: 1rpx solid #f5f5f5;
    color: #A9A9A9;
}
.notice-tab .tab.cur {
    color: #1abc9c;
    border-bottom: 1rpx solid #1abc9c;
}
.notice-tab .tab {
    position: relative;
    font-size: 32rpx;
    color: #A9A9A9;
    padding: 30rpx 40rpx;
    display: inline-block;
}
.msg-wrap {
    width: 100%;
    overflow: hidden;
}
.list-no-result {
    text-align: center;
    color: #999;
    font-size: 24rpx;
    padding: 20rpx 0;
}
